{
  "openapi": "3.0.1",
  "info": {
    "title": "BudgetTracker | v1",
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "${{API_SERVER_URL}}"
    }
  ],
  "paths": {
    "/budgets": {
      "get": {
        "tags": [
          "BudgetsEndpoint"
        ],
        "summary": "Get budgets based on budget name",
        "description": "Returns details including name and available funds of budgets, optionally filtered by budget name",
        "operationId": "GetBudgets",
        "parameters": [
          {
            "name": "budgetName",
            "in": "query",
            "description": "The name of the budget to retrieve",
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Budget"
                  }
                }
              }
            }
          },
          "400": {
            "description": "Bad Request",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ApiResponse"
                }
              }
            }
          }
        }
      },
      "post": {
        "tags": [
          "BudgetsEndpoint"
        ],
        "summary": "Create a new budget",
        "description": "Create a new budget with a specified name and available funds",
        "operationId": "CreateBudget",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/Budget"
              }
            }
          },
          "required": true
        },
        "responses": {
          "201": {
            "description": "Created",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Budget"
                }
              }
            }
          },
          "400": {
            "description": "Bad Request",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ApiResponse"
                }
              }
            }
          }
        }
      }
    },
    "/transactions": {
      "get": {
        "tags": [
          "TransactionsEndpoint"
        ],
        "summary": "Get transactions based on budget name or category",
        "description": "Returns details of transactions identified from filters like budget name or category",
        "operationId": "GetTransactions",
        "parameters": [
          {
            "name": "budgetName",
            "in": "query",
            "description": "The name of the budget to filter results on",
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "category",
            "in": "query",
            "description": "The name of the category to filter results on",
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/TransactionListResponse"
                }
              }
            }
          },
          "400": {
            "description": "Bad Request",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ApiResponse"
                }
              }
            }
          }
        }
      }
    },
    "/budgets/charge": {
      "post": {
        "tags": [
          "BudgetsEndpoint"
        ],
        "summary": "Charge an amount to a budget",
        "description": "Charge an amount to a budget with a specified name, removing the amount from available funds",
        "operationId": "ChargeBudget",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/Transaction"
              }
            }
          },
          "required": true
        },
        "responses": {
          "202": {
            "description": "Accepted",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ApiResponse"
                }
              }
            }
          },
          "400": {
            "description": "Bad Request",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ApiResponse"
                }
              }
            }
          }
        }
      }
    },
    "/budgets/extend": {
      "post": {
        "tags": [
          "BudgetsEndpoint"
        ],
        "summary": "Add an amount to a budget",
        "description": "Add an amount to a budget with a specified name, adding the amount to available funds",
        "operationId": "ExtendBudget",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/Transaction"
              }
            }
          },
          "required": true
        },
        "responses": {
          "202": {
            "description": "Accepted",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ApiResponse"
                }
              }
            }
          },
          "400": {
            "description": "Bad Request",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ApiResponse"
                }
              }
            }
          }
        }
      }
    },
    "/transactions/send": {
      "post": {
        "tags": [
          "TransactionsEndpoint"
        ],
        "summary": "Send a transaction report to my email",
        "description": "Sends a transaction report via email, optionally filtered by budget",
        "operationId": "SendTransactionReport",
        "parameters": [
          {
            "name": "budgetName",
            "in": "query",
            "description": "The name of the budget to filter report on",
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "202": {
            "description": "Accepted",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ApiResponse"
                }
              }
            }
          },
          "400": {
            "description": "Bad Request",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ApiResponse"
                }
              }
            }
          }
        },
        "x-openai-isConsequential": false
      }
    }
  },
  "security": [
    {
      "OAuth2": [
        "api://${{ENTRA_CLIENT_ID}}/.default"
      ]
    }
  ],
  "tags": [
    {
      "name": "BudgetsEndpoint"
    },
    {
      "name": "TransactionsEndpoint"
    }
  ],
  "components": {
    "schemas": {
      "Budget": {
        "required": [
          "name",
          "availableFunds"
        ],
        "type": "object",
        "properties": {
          "name": {
            "type": "string",
            "description": "The name of the budget",
            "nullable": true
          },
          "availableFunds": {
            "type": "number",
            "description": "The available funds in the budget",
            "format": "double"
          }
        }
      },
      "ApiResponse": {
        "required": [
          "message"
        ],
        "type": "object",
        "properties": {
          "message": {
            "type": "string",
            "description": "The response message"
          }
        }
      },
      "TransactionListResponse": {
        "required": [
          "transactions"
        ],
        "type": "object",
        "properties": {
          "transactions": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/Transaction"
            },
            "description": "The list of transactions in the API response"
          },
          "templates": {
            "type": "object",
            "description": "Adaptive Card templates"
          }
        }
      },
      "Transaction": {
        "required": [
          "budgetName",
          "amount",
          "description"
        ],
        "type": "object",
        "properties": {
          "budgetName": {
            "type": "string",
            "description": "The name of the budget to adjust",
            "nullable": true
          },
          "amount": {
            "type": "number",
            "description": "The amount of the adjustment",
            "format": "double"
          },
          "description": {
            "type": "string",
            "description": "The description for the change",
            "nullable": true
          },
          "expenseCategory": {
            "type": "string",
            "description": "The expense category for charges against the budget",
            "nullable": true
          },
          "displayTemplate": {
            "type": "string",
            "description": "The JSONPath to the Adaptive Card template to use for rendering this transaction in an API plugin",
            "nullable": true
          }
        }
      }
    },
    "securitySchemes": {
      "OAuth2": {
        "type": "oauth2",
        "flows": {
          "authorizationCode": {
            "authorizationUrl": "https://login.microsoftonline.com/${{ENTRA_TENANT_ID}}/oauth2/v2.0/authorize",
            "tokenUrl": "https://login.microsoftonline.com/${{ENTRA_TENANT_ID}}/oauth2/v2.0/token",
            "refreshUrl": "https://login.microsoftonline.com/${{ENTRA_TENANT_ID}}/oauth2/v2.0/token",
            "scopes": {
              "api://${{ENTRA_CLIENT_ID}}/.default": "Access Budget Tracker as you"
            }
          }
        }
      }
    }
  }
}
